<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.example.lolHi.dao.ReplyDao">
		
	<insert id="write" useGeneratedKeys="true" keyProperty="id">
		insert into reply
		<set> 
			regDate = NOW(), updateDate = NOW(),
		    <if test="relTypeCode !=null">
				relTypeCode = #{relTypeCode},
			</if>
			<if test="relId !=null">
				relId = #{relId},
			</if>
			<if test="body !=null">
				body = #{body},
			</if>
			<if test="memberId !=null">
				memberId = #{memberId},
			</if>
		</set>
	</insert>

	<select id="getForPrintReplies" resultType="Reply">
		select *
		from reply
		where relTypeCode = #{relTypeCode}
		and relId = #{relId} 
		order by id DESC
	</select>
	
	<select id="getReply" resultType="Reply">
		select *
		from reply
		where id = #{id}		
	</select>
	
	<delete id="deleteReplyById">
		delete from reply
		where id = #{id}		
	</delete>
	
</mapper>
